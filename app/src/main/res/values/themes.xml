<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="Theme.19819211_Assignment_2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <!-- <item name="colorAccent">@color/teal_200</item> -->
        <item name="android:buttonStyle">@style/BlueButton</item>
    </style>

    <!-- Button Themes -->

    <style name="BlueButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="BlueButtonLarge" parent="BlueButton">
        <item name="android:height">70dp</item>
        <item name="android:width">170dp</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>